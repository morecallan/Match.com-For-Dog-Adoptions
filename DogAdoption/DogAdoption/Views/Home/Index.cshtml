@{
    ViewBag.Title = "Home Page";
}

<div ng-controller="Splash">
    <div id="jumbotron">
        <h1 class="header center">Companion</h1>
        <h5 class="header center light">Find your fur-ever friend based on best personality fit!</h5>
        <div class="row center">
            <a href="/account/register" class="btn-large">Find Your Fido</a>
        </div>
    </div>


    <div class="horizontal-card-container">
        <div class="card small" ng-repeat="areaDog in areaDogs">
            <div class="card-image waves-effect waves-block waves-light">
                <img class="activator" ng-src="{{areaDog.picture}}">
            </div>
            <div class="card-content">
                <span class="card-title activator grey-text text-darken-4">{{areaDog.name}}<i class="material-icons right">more_vert</i></span>
                <p><a ng-href="{{areaDog.link}}">Learn More</a></p>
            </div>
            <div class="card-reveal">
                <span class="card-title grey-text text-darken-4">{{areaDog.name}}<i class="material-icons right">close</i></span>
                <p>{{areaDog.description}}</p>
            </div>
        </div>
    </div>
</div>